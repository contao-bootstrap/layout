{
  "name": "contao-bootstrap/layout",
  "description": "Bootstrap layout integration in Contao",
  "license": "LGPL-3.0-or-later",
  "type": "contao-bundle",
  "keywords": [
    "bootstrap",
    "layout",
    "contao"
  ],
  "authors": [
    {
      "name": "David Molineus",
      "email": "mail@netzmacht.de",
      "homepage": "https://netzmacht.de",
      "role": "Developer"
    },
    {
      "name": "Alexander Kehr",
      "email": "info@kehr-solutions.de",
      "homepage": "https://www.kehr-solutions.de",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "mail@netzmacht.de",
    "issues": "https://github.com/contao-bootstrap/layout/issues",
    "wiki": "http://contao-bootstrap.netzmacht.de",
    "source": "https://github.com/contao-bootstrap/layout"
  },
  "require": {
    "php": "^8.1",
    "contao-bootstrap/core": "^3.0",
    "contao/core-bundle": "^4.13 || ^5.0",
    "doctrine/dbal": "^3.3",
    "netzmacht/contao-toolkit": "^3.8 || ^4.0",
    "netzmacht/html": "^2.0.2",
    "symfony/config": "^4.4 || ^5.4 || ^6.0",
    "symfony/dependency-injection": "4.4 || ^5.4 || ^6.0",
    "symfony/http-kernel": "^4.4 || ^5.4 || ^6.0"
  },
  "require-dev": {
    "contao/manager-plugin": "^2.0",
    "doctrine/coding-standard": "^10.0.",
    "netzmacht/phpspec-phpcq-plugin": "*@dev",
    "phpcq/coding-standard": "^2.1.2",
    "phpcq/plugin-api": "1.x-dev",
    "phpcq/runner-bootstrap": "1.x-dev",
    "phpspec/phpspec": "^6.3.0 || ^7.0"
  },
  "conflict": {
    "netzmacht/contao-bootstrap": "*"
  },
  "repositories": {
    "contao-bootstrap-core": {
      "type": "vcs",
      "url": "https://git.netzmacht.de/contao-bootstrap/core.git"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "ContaoBootstrap\\Layout\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spec\\ContaoBootstrap\\Layout\\": "spec/"
    }
  },
  "config": {
    "allow-plugins": {
      "contao-components/installer": false,
      "contao/manager-plugin": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-bootstrap5": "3.0.x-dev",
      "dev-develop": "2.2.x-dev",
      "dev-master": "2.1.x-dev"
    },
    "contao": {
      "transifex": {
        "languages_cto": "src/Resources/contao/languages",
        "languages_tx": ".tx",
        "prefix": "layout-",
        "project": "contao-bootstrap"
      }
    },
    "contao-manager-plugin": "ContaoBootstrap\\Layout\\ContaoManager\\Plugin"
  }
}
